<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/activities/exercise.css">
</head>
<body>
    <header class="main-header">
        <%- include('../includes/navigation.ejs') %> 
    </header>
<main>
    <div class="page-title__div">
        <h2 class="page-title"><%= pageTitle %>:</h2>
    </div>
    <form class="form" action="/activities/exercise" method="POST">
        <div class="form__control">
            <div class="form__item">
                <label for="name" class="form__title">Nombre:</label>
                <input type="text" name="name" id="exercise-name">
            </div>
            <div class="form__item">
                <label for="alternativeName" class="form__title">Nombre alternativo:</label>
                <input type="text" name="alternativeName" id="alternativeName">
            </div>
            <div class="form__item">
                <label for="difficulty" class="form__title">Dificultad:</label>
                <select name="difficulty" id="difficulty-selection">
                    <option value="baja">Baja</option>
                    <option value="media">Media</option>
                    <option value="alta">Alta</option>
                </select>
            </div>
            <div class="form__item">
                <label for="types" class="form__title">Tipos de ejercicio:</label>
                <select name="types" id="types-selection">
                    <option value="fuerza">Fuerza</option>
                    <option value="hiit">HIIT</option>
                    <option value="cardio">Cardio</option>
                    <option value="estiramiento">Estiramiento</option>
                </select>
            </div>
            <div class="form__item">
                <label class="form__title">Ejercicio compuesto:</label>
                <input type="radio" name="compundMovement" id="compundMovement-yes-selection">
                <label for="compundMovement" class="form__title">Sí</label>
                <input type="radio" name="compundMovement" id="compundMovement-no-selection">
                <label for="compundMovement" class="form__title">No</label>
            </div>
            <div class="form__item">
                <label for="mainMuscle" class="form__title">Músculo principal:</label>
                <select name="mainMuscle" id="mainMuscle-selection">
                    <option value="pantorrilla">Pantorrilla</option>
                </select>
            </div>
            <div class="form__item">
                <label for="secondaryMuscles" class="form__title">Músculos secundarios:</label>
                <select name="secondaryMuscles" id="secondaryMuscles-selection">
                    <option value="pantorrilla">Pantorrilla</option>
                </select>
            </div>
            <div class="form__item">
                <label for="equipments" class="form__title">Equipos:</label>
                <select name="equipments" id="equipments-selection">
                    <option value="barra">Barra</option>
                </select>
            </div>
            <div class="form__item">
                <label for="safeForConditions" class="form__title">Seguro para condiciones:</label>
                <select name="safeForConditions" id="safeForConditions-selection">
                    <option value="diabetestipo1">Diabetes tipo 1</option>
                    <option value="diabetestipo2">Diabetes tipo 2</option>
                    <option value="enfermedadesautinmunes">Enfermedades autoinmunes</option>
                </select>
            </div>
            <div class="form__item">
                <label for="notRecommendedForConditions" class="form__title">No recomendado para condiciones:</label>
                <select name="notRecommendedForConditions" id="notRecommendedForConditions-selection">
                    <option value="enfermedadesautinmunes">Enfermedades autoinmunes</option>
                </select>
            </div>
            <div class="form__item">
                <label for="recommendedForCyclePhases" class="form__title">Recomendado para fases:</label>
                <select name="recommendedForCyclePhases" id="recommendedForCyclePhases-selection">
                    <option value="periodo">Periodo</option>
                    <option value="folicular">Folicular</option>
                    <option value="ovulacion">Ovulación</option>
                    <option value="secretora">Secretora</option>
                </select>
            </div>
            <div class="form__item">
                <label for="linkToVideo" class="form__title">Enlace para video:</label>
                <input type="text" name="linkToVideo" id="linkToVideo">
            </div>
        </div>

        <div class="form__btn-control">
            <button class="form__btn" type="submit">Añadir</button>
        </div>
    </form>
</main>
</body>
</html>